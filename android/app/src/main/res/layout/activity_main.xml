<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:weightSum="5"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="500px"
			android:layout_marginLeft="20px"
			android:layout_marginRight="20px"
			android:foregroundGravity="center"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/armon_test_txtInfo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Üye numaranızı giriniz" />

			<EditText
				android:id="@+id/armon_test_inputMemberId"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ems="10"
				android:inputType="textPersonName"
				android:text="3390244" />

			<Button
				android:id="@+id/armon_test_btnStart"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:onClick="onButtonStartClicked"
				android:text="Başlat" />

			<Button
				android:id="@+id/armon_test_btnGetLogs"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20px"
				android:onClick="onButtonGetLogsClicked"
				android:text="Kayıtları Listele" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="20px"
			android:layout_marginRight="20px"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="100px"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/armon_test_textView3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="sans-serif-black"
					android:text="Kayıtlar"
					android:textSize="18sp"
					android:textStyle="bold" />

				<Space
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1" />

				<Button
					android:id="@+id/armon_test_btnShare"
					android:layout_width="144dp"
					android:layout_height="40dp"
					android:onClick="onButtonShareClicked"
					android:text="Paylaş"
					android:textSize="12sp"
					android:visibility="invisible" />
			</LinearLayout>

			<TextView
				android:id="@+id/armon_test_txtLogs"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scrollbars="vertical"
				android:text="Kayıtları görmek için öncelikle işlem akışı başlatınız" />

		</LinearLayout>
	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>